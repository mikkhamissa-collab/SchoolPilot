{
  "manifest_version": 3,
  "name": "SchoolPilot",
  "version": "2.0.0",
  "description": "AI-powered study assistant for ASL â€” syncs with schoolpilot.co",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": ["https://lms.asl.org/*", "https://schoolpilot.co/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SchoolPilot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://schoolpilot.co/*", "https://school-pilot.vercel.app/*"],
      "js": ["web-auth.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
